<?xml version="1.0"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">
    
    <bean id="mahasiswaDTOAssembler" class="com.agit.crm.interfaces.web.facade.dto.assembler.crm.MahasiswaDTOAssembler">
        <property name="lowonganRepository" ref="lowonganRepository"/>
        <property name="lowonganDTOAssembler" ref="lowonganDTOAssembler"/>
    </bean>
    <bean id="mahasiswaService" class="com.agit.crm.application.impl.MahasiswaServiceImpl">
        <property name="mahasiswaRepository" ref="mahasiswaRepository"/>
        <property name="mahasiswaDTOAssembler" ref="mahasiswaDTOAssembler"/>
        <property name="lowonganRepository" ref="lowonganRepository"/>
        <property name="lowonganDTOAssembler" ref="lowonganDTOAssembler"/>
    </bean>
    
    <bean id="lowonganDTOAssembler" class="com.agit.crm.interfaces.web.facade.dto.assembler.crm.LowonganDTOAssembler">
    </bean>
    <bean id="lowonganService" class="com.agit.crm.application.impl.LowonganServiceImpl">
        <property name="lowonganRepository" ref="lowonganRepository"/>
        <property name="lowonganDTOAssembler" ref="lowonganDTOAssembler"/>
    </bean>
    
    <bean id="forumDTOAssembler" class="com.agit.crm.interfaces.web.facade.dto.assembler.crm.ForumDTOAssembler">
    </bean>
    <bean id="forumService" class="com.agit.crm.application.impl.ForumServiceImpl">
        <property name="forumRepository" ref="forumRepository"/>
        <property name="forumDTOAssembler" ref="forumDTOAssembler"/>
    </bean>
    
    <bean id="eventDTOAssembler" class="com.agit.crm.interfaces.web.facade.dto.assembler.crm.EventDTOAssembler">
    </bean>
    <bean id="eventService" class="com.agit.crm.application.impl.EventServiceImpl">
        <property name="eventRepository" ref="eventRepository"/>
        <property name="eventDTOAssembler" ref="eventDTOAssembler"/>
    </bean>
    
    <bean id="minatDTOAssembler" class="com.agit.crm.interfaces.web.facade.dto.assembler.crm.MinatDTOAssembler"></bean>
    <bean id="minatService" class="com.agit.crm.application.impl.MinatServiceImpl">
        <property name="minatRepository" ref="minatRepository"/>
        <property name="minatDTOAssembler" ref="minatDTOAssembler"/>
    </bean>
    
    <bean id="keterampilanDTOAssembler" class="com.agit.crm.interfaces.web.facade.dto.assembler.crm.KeterampilanDTOAssembler"></bean>
    <bean id="keterampilanService" class="com.agit.crm.application.impl.KeterampilanServiceImpl">
        <property name="keterampilanRepository" ref="keterampilanRepository"/>
        <property name="keterampilanDTOAssembler" ref="keterampilanDTOAssembler"/>
    </bean>
   
</beans>