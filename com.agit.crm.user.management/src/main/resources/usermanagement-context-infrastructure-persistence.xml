    <bean id="roleRepository" class="com.agit.crm.user.management.infrastructure.persistence.hibernate.RoleRepositoryHibernate">
        <property name="sessionFactory" ref="sessionFactory"/>
    </bean>
    <bean id="userRepository" class="com.agit.crm.user.management.infrastructure.persistence.hibernate.UserRepositoryHibernate">
        <property name="sessionFactory" ref="sessionFactory"/>
    </bean>
