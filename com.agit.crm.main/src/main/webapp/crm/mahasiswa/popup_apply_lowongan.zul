    <window border="30" apply="org.zkoss.bind.BindComposer" width="400px"
            viewModel="@id('vm') @init('com.agit.crm.main.viewmodel.admin.LowonganVM')"
            form="@id('fx') @load(vm.lowonganDTO) @save(vm.lowonganDTO, before='buttonSaveLowongan')">
    <groupbox closable="false" mold="3d">
        <caption label="Persetujuan"/>
        <groupbox closable="false">
            <grid style="border:0;">
                <columns>
                    <column width="25%"/>
                    <column width="50%"/>
                    <column width="25%"/>
                    <column width="25%"/>
                </columns>
                <rows>
                    <row>
                        <image src="/images/iconcheck.png;" align="right" />
                        <label value="Apakah anda yakin apply lowongan ini?" />
                        <checkbox id="Iya" label="Iya"/>
                        <checkbox id="Tidak" label="Tidak"/>
                    </row>
                </rows>
            </grid>
            <separator height="10px"/>
        </groupbox>
        <separator/>
        <groupbox contentStyle="border:0; padding-left:20%; ">
            <hbox align="center">
                <button label="Kembali" mold="trendy" width="100px" onClick="@command('buttonKembaliLowongan')"/>
                <space width="1%"/>
                <button label="Simpan" width="100px" onClick="@command('buttonKonfirmasi', object=vm.ticketDTO)"/>
            </hbox>
        </groupbox>
    </groupbox>
</window>