<?xml version="1.0" encoding="UTF-8"?>

<zk xmlns="http://www.zkoss.org/2005/zul">
    <window>
        <groupbox closable="false" mold="3d">
            <caption label="Dashboard Register Mahasiswa" />
            <groupbox closable="false">
                <caption label="Parameter Pencarian" />
                <grid style="border:0">
                    <columns>
                        <column width="20%" />
                        <column width="30%" />
                        <column width="20%" />
                        <column width="30%" />
                    </columns>
                    <rows>
                        <row>
                            <label value="Nama Lowongan" />
                            <textbox width="60%"/>
                            <label value="Tanggal Berakhir" />
                            <datebox width="60%"/>                            
                        </row>
                        <row>
                            <label value="Lokasi Kerja" />
                            <textbox width="60%" value="@bind(vm.idDataBank)"/>
                            <label value="Jenis Pekerjaan" />
                            <combobox width="60%" placeholder="- Silahkan Pilih -">
                                <template name="model" var="items">
                                    <comboitem label="@load(items)" value="@load(items)"/>
                                </template>
                            </combobox>
                        </row>
                        <row>
                            <cell></cell>
                            <cell></cell>
                            <cell align="left">
                                <button width="60%" label="Pencarian" mold="trendy" onClick="@command('searchDataBank')"/>
                                
                            </cell>
                            <cell colspan="2"></cell> 
                        </row>
                    </rows>
                </grid>
                <separator></separator>
            </groupbox>
            <groupbox closable="false">
                <paging forward="onPaging" />
                <listbox mold="paging" emptyMessage="${labels.common.noDataFound}">
                    <listhead>
                        <listheader label="ID" width="5%" align="center" sortDirection="ascending"/>
                        <listheader label="Nama Lowongan" width="20%" align="center"/>
                        <listheader label="Tanggal Mulai" width="14%" align="center"/>
                        <listheader label="Tanggal Berakhir" width="14%" align="center"/>
                        <listheader label="Fungsi Pekerjaan" width="14%" align="center"/>
                        <listheader label="Lokasi" width="14%" align="center"/>
                        <listheader label="Aksi" width="10%" align="center"/>
                    </listhead>
                    <template name="model">
                        <listitem value="${each}">
                            <listcell>
                                <label width="100%"/>
                            </listcell>
                            <listcell>
                                <label width="100%"/>
                            </listcell>
                            <listcell>
                                <label width="100%"/>
                            </listcell>
                            <listcell>
                                <label width="100%"/>
                            </listcell>
                            <listcell>
                                <label width="100%"/>
                            </listcell>
                            <listcell>
                                <a label="Detail" style="text-decoration:underline ;color:blue" onClick="@command('detailDataBank', object=each)"></a>
                            </listcell>
                        </listitem>
                    </template>
                </listbox>
            </groupbox>
        </groupbox>
    </window>
</zk>
